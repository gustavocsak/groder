{
  "manifest_version": 2,
  "name": "groder",
  "version": "1.0",
  "description": "Code grader assistant",
  "homepage_url": "https://github.com/gustavocsak/groder",
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
